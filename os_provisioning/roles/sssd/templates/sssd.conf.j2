[sssd]
config_file_version = 2
services = nss, pam
domains = {{ hostvars[freeipa_hostname]['ipaserver_domain'] }}

[domain/{{ hostvars[freeipa_hostname]['ipaserver_domain'] }}]
cache_credentials = true
krb5_store_password_if_offline = true
id_provider = ipa
auth_provider = ipa
access_provider = ipa
chpass_provider = ipa
ipa_hostname = {{ freeipa_domain_name }}
